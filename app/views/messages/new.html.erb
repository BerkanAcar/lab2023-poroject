<div align="center">
	<%= form_for :message, url: messages_path do |f| %>
	  
	  <p class="col-sm-3">
	    <%= f.label :text %><br>
	    <%= f.text_area :text, :rows => '5', :class => 'form-control', :placeholder => 'Write a message.' %>
	  
	    <%= f.submit :class => 'btn btn-primary' %>
	  </p>
	<% end %>
</div>