<div align="center">
  <%= form_for @tweet do |f| %>
   
    <% if @tweet.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@tweet.errors.count, "error") %> prohibited
          this tweet from being saved:
        </h2>
        <ul>
          <% @tweet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
   
    <p class="col-sm-3">
      <%= f.label :text %><br>
      <%= f.text_area :text, :rows => '5', :class => 'form-control', :placeholder => 'Write a tweet.' %>
    
      <%= f.submit :class => 'btn btn-primary' %>
      <%= link_to 'Back', tweets_path, :class => 'btn btn-warning' %>
    </p>
   
  <% end %>
</div>