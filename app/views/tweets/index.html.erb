<%= render 'welcome/navbar' %>
<h1 align="center">Listing tweets</h1>

<table align="center">
	<tr>
		<th>Text</th>
	</tr>
		
		<% @tweets.each do |tweet| %>
			<tr>
				<td><%= tweet.text %></td>
				
				<td><%= link_to 'Show', tweet_path(tweet) %></td>
				<td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
				<td><%= link_to 'Destroy', tweet_path(tweet),
	              method: :delete,
	              data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	
</table>